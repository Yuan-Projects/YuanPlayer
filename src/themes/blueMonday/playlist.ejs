<div class="jp-type-playlist">
  <div class="jp-playlist">
    <% if (locals.tracks.length) { %>
    <ul style="display: block;">
      <% locals.tracks.forEach(function(track, index){ %>
        <li>
          <div>
            <a href="javascript:;" class="jp-playlist-item-remove" style="display: none;">Ã—</a>
            <a href="javascript:;" class="jp-playlist-item" data-index="<%= index %>" data-trackid="<%= track.id %>" tabindex="0"><%= track.title %></a>
          </div>
        </li>
      <% }); %>
    </ul>
    <% } else { %>
      <div class="jp-playlist-empty">The playlist is empty.</div>
    <% } %>
  </div>
</div>