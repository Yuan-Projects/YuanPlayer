<div class="yuan-type-playlist">
  <div class="yuan-playlist">
    <ul style="display: block;">
      <% locals.tracks.forEach(function(track, index){ %>
        <li class="yuan-playlist-item">
          <div>
            <a href="javascript:;" class="yuan-playlist-item-remove" style="display: none;">Ã—</a>
            <a href="javascript:;" data-index="<%= index %>" data-trackid="<%= track.id %>" tabindex="0"><%= track.title %></a>
          </div>
        </li>
      <% }); %>
    </ul>
    <div class="yuan-playlist-empty" style="display: <%= locals.tracks.length ? 'none' : 'block'  %>;">The playlist is empty.</div>
  </div>
</div>